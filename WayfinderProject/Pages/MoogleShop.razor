    private string GetInventoryInformation(InventoryDto inventory)
    {
        if (inventory.Cost > 0)
        {
            return $"{inventory.Cost} {inventory.Currency}";
        }
        else
        {
            if (!string.IsNullOrEmpty(inventory.AdditionalInformation))
            {
                return inventory.AdditionalInformation;
            }
            else
            {
                return "Obtained by Synthesis, Treasures or Other";
            }
        }
