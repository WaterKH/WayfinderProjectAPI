    public void NavigateToDailyMoogleRecord()
    {
        try
        {
            var dateCode = DateTime.Now.ToString("yyyyMMdd");
            var recordId = this.context.DailyMoogleRecords.FirstOrDefault(record => record.DateCode == dateCode)?.RecordId;
            var moogleRecord = this.context.Inventory.AsNoTracking()
                .Include(i => i.Game)
                .Include(i => i.EnemyDrops).ThenInclude(i => i.CharacterLocation).ThenInclude(i => i.World)
                .Include(i => i.EnemyDrops).ThenInclude(i => i.CharacterLocation).ThenInclude(i => i.Areas)
                .FirstOrDefault(i => i.Id == recordId);

            if (moogleRecord == null)
            {
                return;
            }

            var dailyLink = $"{NavigationManager.BaseUri}moogle_shop?";

            dailyLink += string.Join("&", moogleRecord.EnemyDrops.Select(x => $"character={x.Id}")) + "&";
            dailyLink += $"game={moogleRecord.Game.Id}&";
            dailyLink += $"record={moogleRecord.Id}&";
            dailyLink += string.Join("&", moogleRecord.EnemyDrops.Select(x => x.CharacterLocation).Select(x => $"world={x.World.Id}")) + "&";
            dailyLink += string.Join("&", moogleRecord.EnemyDrops.Select(x => x.CharacterLocation).SelectMany(x => x.Areas).Select(x => $"area={x.Id}")) + "&";

            var category = string.Empty;
            switch (moogleRecord.Category)
            {
                case "Item":
                    category = "Items";
                    break;
                case "Keyblade":
                case "Staff":
                case "Shield":
                    category = "Weapons";
                    break;
                case "Accessory":
                case "Armor":
                    category = "AccessoryArmor";
                    break;
                case "Synthesis Material":
                    category = "SynthesisMaterial";
                    break;
            }

            dailyLink += $"category={category}&";
            dailyLink += $"open_row={moogleRecord.Id}";

            NavigationManager.NavigateTo(dailyLink, true);
        }
        catch (Exception)
        {

        }
    }

